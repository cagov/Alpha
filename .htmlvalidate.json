{
  "extends": [
    "htmlvalidate:document",
    "htmlvalidate:recommended"
  ],
 
  "rules": {
    "attr-case": "error",
    "attribute-boolean-style": "error",
    "class-pattern": "error",
    "close-attr": "error",
    "close-order": "error",
    "deprecated": "error",
    "deprecated-rule": "error",
    "doctype-html": "error",
    "element-case": "error",
    "element-name": "error",
    "element-permitted-occurrences": "error",
    "element-permitted-order": "error",
    "element-required-content": "error",
    "empty-title": "error",
    "heading-level": "error",
    "input-missing-label": "error",
    "long-title": "error",
    "no-conditional-comment": "error",
    "no-dup-attr": "error",
    "no-dup-class": "error",
    "no-raw-characters": ["error",{"relaxed": false}],
    "no-implicit-close": "error",
    "no-missing-references": "error",
    "prefer-button": "error",
    "prefer-tbody": "error",
    "svg-focusable": "error",
    "unrecognized-char-ref": "error",
    "wcag/h30": "error",
    "wcag/h32": "error",
    "wcag/h36": "error",
    "wcag/h37": "error",
    "wcag/h67": "error",

    "no-dup-id": "off",
    "attribute-allowed-values": "off",
    "id-pattern": "off",
    "attr-quotes": "off",
    "no-trailing-whitespace": "off",
    "no-deprecated-attr": "off",
    "empty-heading": "off",
    "element-permitted-content": "off",
    "element-required-attributes": "off",
    "void": "off",

    "missing-doctype": "off",
    "no-inline-style": "off",
    "no-style-tag": "off",
    "no-unknown-elements": "off",
    "require-sri": "off"
  }
}