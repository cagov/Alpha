{
  "extends": [
    "htmlvalidate:document",
    "htmlvalidate:recommended"
  ],
 
  "rules": {
    "attr-case": ["error",{"style": "lowercase","ignoreForeign": true}],
    "attr-quotes": ["error",{"style": "auto","unquoted": false}],
    "attribute-allowed-values": "error",
    "attribute-boolean-style": ["error",{"style": "omit"}],
    "class-pattern": ["error",{"pattern": "kebabcase"}],
    "close-attr": "error",
    "close-order": "error",
    "deprecated": "error",
    "deprecated-rule": "error",
    "doctype-html": "error",
    "element-case": ["error",{"style": "lowercase"}],
    "element-name": "error",
    "element-permitted-occurrences": "error",
    "element-permitted-order": "error",
    "element-required-attributes": "error",
    "element-required-content": "error",
    "empty-title": "error",
    "heading-level": "error",
    "input-missing-label": "error",
    "long-title": ["error",{"maxlength": 70}],
    "no-conditional-comment": "error",
    "no-deprecated-attr": "error",
    "no-dup-attr": "error",
    "no-dup-class": "error",
    "no-implicit-close": "error",
    "no-missing-references": "error",
    "no-raw-characters": ["error",{"relaxed": false}],
    "no-style-tag": "error",
    "prefer-button": "error",
    "prefer-tbody": "error",
    "svg-focusable": "error",
    "unrecognized-char-ref": "error",
    "wcag/h30": "error",
    "wcag/h32": "error",
    "wcag/h36": "error",
    "wcag/h37": "error",
    "wcag/h67": "error",

    "no-dup-id": "warn",
    "id-pattern": ["warn",{"pattern": "kebabcase"}],
    "empty-heading": "warn",
    "no-inline-style": "warn",

    "element-permitted-content": "off",
    "void": ["off",{"style": "selfclose"}],
    "require-sri": ["off",{"target": "crossorigin"}],
    "missing-doctype": "off",
    "no-unknown-elements": "off",
    "no-trailing-whitespace": "off"
  }
}